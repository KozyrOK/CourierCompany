@model CourierCompany.Models.Delivery
@using CourierCompany.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<page class="Page">
    <h2 align="center">Registration of new delivery</h2>    

    @using (Html.BeginForm("NewDelivery", "Delivery", FormMethod.Post))
    {
        <table class="tableCourierCompany" align="center" border="1">

            <tr>
                <td>@Html.LabelFor(m => m.SenderName):</td>
                <td>@Html.TextBoxFor(m => m.SenderName, new { @class = "form-control", maxlength = "50" })</td>                
            </tr>

            <tr>
                <td>@Html.LabelFor(m => m.SenderAddress):</td>
                <td>@Html.TextBoxFor(m => m.SenderAddress, new { @class = "form-control", maxlength = "100" })</td>                
            </tr>

            <tr>
                <td>@Html.LabelFor(m => m.ReceiverName):</td>
                <td>@Html.TextBoxFor(m => m.ReceiverName, new { @class = "form-control", maxlength = "50" })</td>                
            </tr>

            <tr>
                <td>@Html.LabelFor(m => m.ReceiverAddress):</td>
                <td>@Html.TextBoxFor(m => m.ReceiverAddress, new { @class = "form-control", maxlength = "100" })</td>                
            </tr>

            <tr>
                <td>@Html.LabelFor(m => m.DeliveryType):</td>
                <td>@Html.DropDownListFor(m => m.DeliveryType, new SelectList(Enum.GetValues(typeof(DeliveryType))), "Select type delivery", new { @class = "dropDownListNewDelivery" })</td>                
            </tr>

            <tr>
                <td><button type="button" class="btn btn-danger btn-block" width="100" onclick="location.href='@Url.Action("Main", "Main")'">Cancel</button></td>
                <td><input type="submit" class="btn btn-success btn-block" width="100" value="OK" /></td>                
            </tr>            

        </table>
     }
        <table class="tableCourierCompany" align="center">
            <tr>
                <td colspan="2">@Html.ValidationMessageFor(m => m.SenderName)</td>
            </tr>

            <tr>
                <td colspan="2">@Html.ValidationMessageFor(m => m.SenderAddress)</td>
            </tr>

            <tr>
                <td colspan="2">@Html.ValidationMessageFor(m => m.ReceiverName)</td>
            </tr>

            <tr>
                <td colspan="2">@Html.ValidationMessageFor(m => m.ReceiverAddress)</td>
            </tr>

            <tr>
                <td colspan="2">@Html.ValidationMessageFor(m => m.DeliveryType)</td>
            </tr>
        </table>
</page>