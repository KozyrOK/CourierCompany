
@using (Html.BeginForm("ModifiedFragileRating", "Reviews", FormMethod.Post))
{
    <input type="hidden" name="DeliveryFragileRatingId" value="@Model.IdInBaseDeliveryRating" />
    <input type="hidden" name="IdDelivery" value="@Model.DeliveryId" />

    <tr>
        <td>Timely delivery:</td>
        <td><input type="checkbox" name="IsIntimeFragile"></td>
    </tr>

    <tr>
        <td>Presence of defects:</td>
        <td><input type="checkbox" name="IsDefectFragile" /></td>
    </tr>

    <tr>
        <td>Package integrity:</td>
        <td><input type="number" name="IsPackCompleteFragile" min="0" max="10" value="10" /></td>
    </tr>

    <tr>
        <td>Common delivery raiting:</td>
        <td><input type="number" name="CommonDeliveryRaiting" min="0" max="10" value="10" /></td>
    </tr>

    <tr>
        <td>Comment:</td>
        <td><textarea input type="text" name="TextComment" class="form-control" rows="3" maxlength="200"></textarea></td>
    </tr>

    <tr>
        <td><button type="button" class="btn btn-danger btn-block" onclick="window.history.back();">Cancel</button></td>
        <td><input type="submit" class="btn btn-success btn-block" value="To add raiting" /></td>
    </tr>

}
